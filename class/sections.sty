\dottedcontents{chapter}[3.8em]{\bfseries\setstretch{2}}{2.3em}{1pc}

\titleformat{\chapter}[block]
  {\setstretch{1}\normalfont\fontsize{16pt}{18pt}\bfseries\centering}{\chaptertitlename{}~\thechapter{} -- }{0em}{}

\titleformat{\section}
  {\normalfont\fontsize{14pt}{16pt}\bfseries}{\thesection}{1em}{}

\titleformat{\subsection}
  {\normalfont\normalsize\bfseries}{\thesubsection}{1em}{}

\titleformat{\subsubsection}
  {\normalfont\normalsize\itshape}{\thesubsubsection}{1em}{}

